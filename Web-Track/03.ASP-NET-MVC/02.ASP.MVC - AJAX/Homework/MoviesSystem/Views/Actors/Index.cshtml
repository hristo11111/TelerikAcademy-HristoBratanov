@model IList<MoviesSystem.Models.Actor>

@{
    ViewBag.Title = "Index";
}

<h2>Actors</h2>

@for (int i = 0; i < Model.Count; i++)
{
    <ul>
        <li>Name: @Model[i].Name</li>
        <li>Studio name: @Model[i].StudioName</li>
        <li>Studio address: @Model[i].StudioAddress</li>
    </ul>
    @Ajax.ActionLink("Movies", "Index", "Actors", new { id = Model[i].Id }, new AjaxOptions
        {
            InsertionMode = InsertionMode.Replace,
            UpdateTargetId = "each-actor-movies-details",
            OnSuccess = "ShowMoviesContainer"
        });
}

<div id="each-actor-movies">
    <h2>Movies</h2>
    <div id="each-actor-movies-details">

    </div>
</div>

<script>
    function ShowMoviesContainer() {
        $("#each-actor-movies").show();
    }
</script>
